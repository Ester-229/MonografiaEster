<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - www.nzandu.co.ao</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/Script.js"></script>

</head>
<body>
    <nav class="navbar bg-light  ">
        <div class="container-fluid">
            <a class="navbar-brand logo-icon me-2" style="color: #c5e1a5">
                <img class="logo-icon me-2" src="~/Admin/assets/images/app-logo.svg" width="50" height="50" alt="logo">  <span class="logo-text" style="color: #43a047"> Nzandu </span>
                @*<h2 style="color:#43a047">Comércial Online</h2>*@
                @*<img class="" src="~/Admin/assets/images/app-logo.svg" style="height:20px; width:20px;border-radius:50%" alt="logo"><span class="logo-text"></span>*@
            </a>


            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
                    aria-controls="offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h1 class="offcanvas-title" id="offcanvasNavbarLabel" style="color:#ff6a00">Nzandu</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" style="color:#ff6a00" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body">
                    <ul class=" navbar-nav justify-content-end flex-grow-1 pe-3">

                        <li>@Html.ActionLink("Página Inicial", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Saiba mais", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Noticias", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("AgroActividades", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Cadastra-se", "Create", "Tb_Usuarios", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Entrar", "Login", "Tb_Usuarios", new { area = "" }, new { @class = "nav-link" })</li>

                    </ul>

                    @*<div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">

                            <ul class="nav navbar-nav " style="float:right !important">
                                @if (Session["Nome_Usuario"] != null)
                                {
                                    <li><p style="color:#ff6a00;margin-top:15px;">Benvindo(a) @Session["Nome_Usuario"]</p></li>
                                    <li>@Html.ActionLink("Sair", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                }
                                else
                                {

                                    <li>@Html.ActionLink("Registar-se", "Create", "Tb_Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Login", "Login", "Tb_Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                                }
                            </ul>
                        </div>*@
                    <form class="d-flex mt-3" role="search" method="post">
                        <input class="form-control me-2" type="search" name="search" id="search" placeholder="Procurar" aria-label="Search">
                        <button class="btn btn-warning" type="submit"> <h6 class="text-white">Procurar</h6> </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nzandu</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
